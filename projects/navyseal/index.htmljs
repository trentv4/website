<!DOCTYPE html>
<html>
	<head>
		<title>Navy Seal Repository</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link id="style" rel="stylesheet" type="text/css" href="/global/stylesheet.less">
		<link id="style" rel="stylesheet" type="text/css" href="stylesheet.less">
	</head>

	<body>
		<% document.require("global/header.htmljs") %>
		<div id="page">
			<% document.require("projects/sidebar.htmljs") %>
			<%
				let values = sql.querySync("select title,content from navyseal")

				let tableOfContents = ``
				let content = ``

				for(let i in values) {
					let seal = values[i]
					tableOfContents += `<li><a href='#${seal.title}'>${seal.title}</a><li>`
					content += `
						<h1 id='${seal.title}'>${seal.title}</h1>
						<p>${seal.content}</p>
						<a href="#header"><p>Back to the table of contents</p></a>
					`
				}

				document.write(`
					<div id="content">
					${content}
					</div>

					<div id="sidebar">
						<li>Table of Contents</li>
						<hr>
						${tableOfContents}
					</div>
				`)
			%>
		</div>
	</body>
</html>